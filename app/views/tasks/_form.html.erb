<%= form_with(model: task ) do |f| %>
  <div id="error_explanation">
    <ul>
      <% task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <div>
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content %>
    <%= f.label :status, 'ステータス' %>
    <%= f.text_field :status %>
  </div>
    <%=f.submit '投稿' %>
<% end %>